{
  "metadata": {
    "name": "nonlinear_elasticity_1d",
    "description": "1D nonlinear elasticity: rho * u_tt = d/dx[sigma(u_x)], with sigma(s) = s + 0.1 s^3. Includes ICs and BCs."
  },
  "variables": {
    "independent": [
      "x",
      "t"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "rho": 1.0
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "u_1d_nonlinear",
      "type": "equals",
      "lhs": {
        "type": "op",
        "op": "*",
        "args": [
          {
            "type": "param",
            "name": "rho"
          },
          {
            "type": "deriv",
            "dep": "u",
            "wrt": "t",
            "order": 2
          }
        ]
      },
      "rhs": {
        "type": "op",
        "op": "*",
        "args": [
          {
            "type": "op",
            "op": "+",
            "args": [
              {
                "type": "const",
                "value": 1.0
              },
              {
                "type": "op",
                "op": "*",
                "args": [
                  {
                    "type": "const",
                    "value": 0.3
                  },
                  {
                    "type": "op",
                    "op": "*",
                    "args": [
                      {
                        "type": "deriv",
                        "dep": "u",
                        "wrt": "x",
                        "order": 1
                      },
                      {
                        "type": "deriv",
                        "dep": "u",
                        "wrt": "x",
                        "order": 1
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "type": "deriv",
            "dep": "u",
            "wrt": "x",
            "order": 2
          }
        ]
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "u",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "fn",
        "name": "u0",
        "args": [
          {
            "type": "var",
            "name": "x"
          }
        ]
      }
    },
    {
      "type": "ic",
      "dep": "u_t",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "fn",
        "name": "u_t0",
        "args": [
          {
            "type": "var",
            "name": "x"
          }
        ]
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "dirichlet",
      "dep": "u",
      "spec": {
        "x": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "u(0,t) = 0 (fixed at x=0)"
    },
    {
      "type": "dirichlet",
      "dep": "sigma_u_x",
      "spec": {
        "x": 1.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "sigma(u_x)=0 at x=1 (stress-free boundary)"
    }
  ]
}