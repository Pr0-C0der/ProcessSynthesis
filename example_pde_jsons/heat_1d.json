{
  "metadata": {
    "name": "1D Heat Equation (u_t = kappa * u_xx)",
    "description": "Heat equation in 1D with Dirichlet boundary conditions u(0,t)=0 and u(1,t)=0, initial condition u(x,0)=sin(pi*x), parameter kappa."
  },
  "variables": {
    "independent": [
      "x",
      "t"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "kappa": 0.1
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "heat_1d",
      "type": "equals",
      "lhs": {
        "type": "deriv",
        "dep": "u",
        "wrt": "t",
        "order": 1
      },
      "rhs": {
        "type": "op",
        "op": "*",
        "args": [
          {
            "type": "param",
            "name": "kappa"
          },
          {
            "type": "deriv",
            "dep": "u",
            "wrt": "x",
            "order": 2
          }
        ]
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "u",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "fn",
        "name": "sin",
        "args": [
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "const",
                "value": 3.141592653589793
              },
              {
                "type": "var",
                "name": "x"
              }
            ]
          }
        ]
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "dirichlet",
      "dep": "u",
      "spec": {
        "x": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "u(0,t) = 0"
    },
    {
      "type": "dirichlet",
      "dep": "u",
      "spec": {
        "x": 1.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "u(1,t) = 0"
    }
  ]
}