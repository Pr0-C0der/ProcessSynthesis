{
  "metadata": {
    "name": "heat_neumann_zero",
    "description": "1D heat equation u_t = kappa u_xx with Neumann zero-flux boundaries at x=0 and x=1 and initial condition u(x,0) = 1 + 0.2 cos(2*pi*x)."
  },
  "variables": {
    "independent": [
      "x",
      "t"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "kappa": 0.05
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "heat_neumann_zero",
      "type": "equals",
      "lhs": {
        "type": "deriv",
        "dep": "u",
        "wrt": "t",
        "order": 1
      },
      "rhs": {
        "type": "op",
        "op": "*",
        "args": [
          {
            "type": "param",
            "name": "kappa"
          },
          {
            "type": "deriv",
            "dep": "u",
            "wrt": "x",
            "order": 2
          }
        ]
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "u",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "const",
            "value": 1
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "const",
                "value": 0.2
              },
              {
                "type": "fn",
                "name": "cos",
                "args": [
                  {
                    "type": "op",
                    "op": "*",
                    "args": [
                      {
                        "type": "op",
                        "op": "*",
                        "args": [
                          {
                            "type": "const",
                            "value": 2
                          },
                          {
                            "type": "const",
                            "value": 3.141592653589793
                          }
                        ]
                      },
                      {
                        "type": "dep",
                        "name": "x"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "neumann",
      "dep": "u",
      "spec": {
        "x": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "zero-flux at x=0"
    },
    {
      "type": "neumann",
      "dep": "u",
      "spec": {
        "x": 1.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "zero-flux at x=1"
    }
  ]
}