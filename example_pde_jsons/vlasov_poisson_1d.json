{
  "metadata": {
    "name": "vlasov_poisson_1d",
    "description": "1D Vlasov-Poisson system for f(x,v,t) with Poisson equation for phi: f_t + v f_x + E f_v = 0, E = -phi_x, phi_xx = rho - background; periodic in x; vanishing tails in v; initial perturbation of Maxwellian."
  },
  "variables": {
    "independent": [
      "x",
      "v",
      "t"
    ],
    "dependent": [
      "f",
      "phi",
      "rho"
    ]
  },
  "parameters": {
    "background": "uniform"
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "v": [
      -20.0,
      20.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "f_transport",
      "type": "equals",
      "lhs": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "deriv",
            "dep": "f",
            "wrt": "t",
            "order": 1
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "dep",
                "name": "v"
              },
              {
                "type": "deriv",
                "dep": "f",
                "wrt": "x",
                "order": 1
              }
            ]
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "op",
                "op": "*",
                "args": [
                  {
                    "type": "const",
                    "value": -1
                  },
                  {
                    "type": "deriv",
                    "dep": "phi",
                    "wrt": "x",
                    "order": 1
                  }
                ]
              },
              {
                "type": "deriv",
                "dep": "f",
                "wrt": "v",
                "order": 1
              }
            ]
          }
        ]
      },
      "rhs": {
        "type": "const",
        "value": 0
      }
    },
    {
      "equation_id": "phi_poisson",
      "type": "equals",
      "lhs": {
        "type": "deriv",
        "dep": "phi",
        "wrt": "x",
        "order": 2
      },
      "rhs": {
        "type": "op",
        "op": "-",
        "args": [
          {
            "type": "dep",
            "name": "rho"
          },
          {
            "type": "param",
            "name": "background"
          }
        ]
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "f",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "fn",
        "name": "f0",
        "args": [
          {
            "type": "var",
            "name": "x"
          },
          {
            "type": "var",
            "name": "v"
          }
        ]
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "periodic",
      "dep": "f",
      "spec": {
        "axis": "x",
        "period": 1.0
      },
      "notes": "periodic in x"
    },
    {
      "type": "dirichlet",
      "dep": "f",
      "spec": "infinity",
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "vanishing tails as |v| -> infty"
    }
  ]
}