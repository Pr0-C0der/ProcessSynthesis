        "args": [
          {
            "type": "deriv",
            "dep": "u",
            "wrt": "t",
            "order": 1
          },
          {
            "type": "op",
            "op": "+",
            "args": [
              {
                "type": "op",
                "op": "*",
                "args": [
                  {
                    "type": "param",
                    "name": "alpha"
                  },
                  {
                    "type": "op",
                    "op": "*",
                    "args": [
                      {
                        "type": "dep",
                        "name": "u"
                      },
                      {
                        "type": "deriv",
                        "dep": "u",
                        "wrt": "x",
                        "order": 1
                      }
                    ]
                  }
                ]
              },
              {
                "type": "op",
                "op": "*",
                "args": [
                  {
                    "type": "param",
                    "name": "beta"
                  },
                  {
                    "type": "deriv",
                    "dep": "u",
                    "wrt": "x",
                    "order": 3
                  }
                ]
              }
            ]
          }
        ]
      },
      "rhs": {
        "type": "const",
        "value": 0
