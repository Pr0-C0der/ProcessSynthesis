{
  "metadata": {
    "name": "advection_1d",
    "description": "One-dimensional linear advection equation u_t + a u_x = 0 with initial condition u(x,0) = exp(-50*(x-0.25)^2) and inflow boundary u(0,t) = exp(-t)."
  },
  "variables": {
    "independent": [
      "x",
      "t"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "a": 1.0
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "advection_1d",
      "type": "equals",
      "lhs": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "deriv",
            "dep": "u",
            "wrt": "t",
            "order": 1
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "a"
              },
              {
                "type": "deriv",
                "dep": "u",
                "wrt": "x",
                "order": 1
              }
            ]
          }
        ]
      },
      "rhs": {
        "type": "const",
        "value": 0
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "u",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "op",
        "op": "exp",
        "args": [
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "const",
                "value": -50
              },
              {
                "type": "op",
                "op": "^",
                "args": [
                  {
                    "type": "op",
                    "op": "-",
                    "args": [
                      {
                        "type": "var",
                        "name": "x"
                      },
                      {
                        "type": "const",
                        "value": 0.25
                      }
                    ]
                  },
                  {
                    "type": "const",
                    "value": 2
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "dirichlet",
      "dep": "u",
      "spec": {
        "x": 0.0
      },
      "value_expr": {
        "type": "op",
        "op": "exp",
        "args": [
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "const",
                "value": -1
              },
              {
                "type": "var",
                "name": "t"
              }
            ]
          }
        ]
      },
      "notes": "inflow: u(0,t) = exp(-t)"
    }
  ]
}