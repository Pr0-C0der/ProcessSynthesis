{
  "metadata": {
    "name": "kelvin_voigt_clamped",
    "description": "Kelvin-Voigt viscoelastic equation for u(x,t): rho * u_tt = E * u_xx + eta * u_xxt with u(0,t)=0, u(1,t)=0, and ICs u(x,0)=0, u_t(x,0)=sin(2*pi*x)."
  },
  "variables": {
    "independent": [
      "x",
      "t"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "rho": 1.0,
    "E": 100.0,
    "eta": 0.2
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "kelvin_voigt_clamped",
      "type": "equals",
      "lhs": {
        "type": "op",
        "op": "*",
        "args": [
          {
            "type": "param",
            "name": "rho"
          },
          {
            "type": "deriv",
            "dep": "u",
            "wrt": "t",
            "order": 2
          }
        ]
      },
      "rhs": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "E"
              },
              {
                "type": "deriv",
                "dep": "u",
                "wrt": "x",
                "order": 2
              }
            ]
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "eta"
              },
              {
                "type": "deriv",
                "dep": "u_xx",
                "wrt": "t",
                "order": 1
              }
            ]
          }
        ]
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "u",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      }
    },
    {
      "type": "ic",
      "dep": "u_t",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "fn",
        "name": "ut0",
        "args": [
          {
            "type": "var",
            "name": "x"
          }
        ]
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "dirichlet",
      "dep": "u",
      "spec": {
        "x": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "u(0,t) = 0"
    },
    {
      "type": "dirichlet",
      "dep": "u",
      "spec": {
        "x": 1.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "u(1,t) = 0"
    }
  ]
}