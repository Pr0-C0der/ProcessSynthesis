{
  "metadata": {
    "name": "steady_reaction_advection",
    "description": "Steady 2D advection-diffusion-reaction equation: a(x,y) · ∇u = D ∇²u + R(u), with a=(1,0.2), D=0.01, R(u)=-u². Inflow boundary at x=0: u(0,y)=1+y."
  },
  "variables": {
    "independent": [
      "x",
      "y"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "a_x": 1.0,
    "a_y": 0.2,
    "D": 0.01
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "y": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "steady_reaction_advection",
      "type": "equals",
      "lhs": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "a_x"
              },
              {
                "type": "deriv",
                "dep": "u",
                "wrt": "x",
                "order": 1
              }
            ]
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "a_y"
              },
              {
                "type": "deriv",
                "dep": "u",
                "wrt": "y",
                "order": 1
              }
            ]
          }
        ]
      },
      "rhs": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "D"
              },
              {
                "type": "op",
                "op": "+",
                "args": [
                  {
                    "type": "deriv",
                    "dep": "u",
                    "wrt": "x",
                    "order": 2
                  },
                  {
                    "type": "deriv",
                    "dep": "u",
                    "wrt": "y",
                    "order": 2
                  }
                ]
              }
            ]
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "const",
                "value": -1
              },
              {
                "type": "op",
                "op": "*",
                "args": [
                  {
                    "type": "dep",
                    "name": "u"
                  },
                  {
                    "type": "dep",
                    "name": "u"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "initial_conditions": [],
  "boundary_conditions": [
    {
      "type": "dirichlet",
      "dep": "u",
      "spec": {
        "x": 0.0
      },
      "value_expr": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "const",
            "value": 1
          },
          {
            "type": "var",
            "name": "y"
          }
        ]
      },
      "notes": "inflow boundary: u(0,y) = 1 + y"
    }
  ]
}