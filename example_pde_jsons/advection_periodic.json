{
  "metadata": {
    "name": "1D Advection (u_t + a u_x = 0) with periodic boundary conditions",
    "description": "Scalar advection equation in x with constant velocity a, initial condition u(x,0)=sin(2*pi*x)+0.1*cos(4*pi*x), periodic boundary condition on x in [0,1]."
  },
  "variables": {
    "independent": [
      "x",
      "t"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "a": 1.0
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "advection_periodic",
      "type": "equals",
      "lhs": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "deriv",
            "dep": "u",
            "wrt": "t",
            "order": 1
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "a"
              },
              {
                "type": "deriv",
                "dep": "u",
                "wrt": "x",
                "order": 1
              }
            ]
          }
        ]
      },
      "rhs": {
        "type": "const",
        "value": 0
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "u",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "fn",
            "name": "sin",
            "args": [
              {
                "type": "op",
                "op": "*",
                "args": [
                  {
                    "type": "const",
                    "value": 6.283185307179586
                  },
                  {
                    "type": "dep",
                    "name": "x"
                  }
                ]
              }
            ]
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "const",
                "value": 0.1
              },
              {
                "type": "fn",
                "name": "cos",
                "args": [
                  {
                    "type": "op",
                    "op": "*",
                    "args": [
                      {
                        "type": "const",
                        "value": 12.566370614359172
                      },
                      {
                        "type": "dep",
                        "name": "x"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "periodic",
      "dep": "u",
      "spec": {
        "axis": "x",
        "domain": [
          0.0,
          1.0
        ]
      }
    }
  ]
}