{
  "metadata": {
    "name": "Kelvin-Voigt viscoelastic (1D)",
    "description": "1D Kelvin-Voigt viscoelastic equation: rho * u_tt = E * u_xx + eta * u_xxt, with initial and boundary conditions."
  },
  "variables": {
    "independent": [
      "x",
      "t"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "rho": 1.0,
    "E": 100.0,
    "eta": 0.5
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "kelvin_voigt",
      "type": "equals",
      "lhs": {
        "type": "op",
        "op": "*",
        "args": [
          {
            "type": "param",
            "name": "rho"
          },
          {
            "type": "deriv",
            "dep": "u",
            "wrt": "t",
            "order": 2
          }
        ]
      },
      "rhs": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "E"
              },
              {
                "type": "deriv",
                "dep": "u",
                "wrt": "x",
                "order": 2
              }
            ]
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "eta"
              },
              {
                "type": "deriv",
                "dep": "u",
                "wrt": "t",
                "order": 2
              }
            ]
          }
        ]
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "u",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      }
    },
    {
      "type": "ic",
      "dep": "u_t",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "dirichlet",
      "dep": "u",
      "spec": {
        "x": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "clamped: u(0,t) = 0"
    },
    {
      "type": "dirichlet",
      "dep": "u",
      "spec": {
        "x": 1.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "clamped: u(1,t) = 0"
    }
  ]
}