{
  "metadata": {
    "name": "rand_pde_23 - 1D scalar PDE",
    "description": "1D PDE in x-t for a scalar field u: u_t = a*(u_xx + u^2) - b*ln(1 + u^2), with Neumann boundary conditions in x and an initial condition at t=0."
  },
  "variables": {
    "independent": [
      "x",
      "t"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "a": 0.02,
    "b": 0.05
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "u_time_evolution",
      "type": "equals",
      "lhs": {
        "type": "deriv",
        "dep": "u",
        "wrt": "t",
        "order": 1
      },
      "rhs": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "a"
              },
              {
                "type": "op",
                "op": "+",
                "args": [
                  {
                    "type": "deriv",
                    "dep": "u",
                    "wrt": "x",
                    "order": 2
                  },
                  {
                    "type": "op",
                    "op": "*",
                    "args": [
                      {
                        "type": "dep",
                        "name": "u"
                      },
                      {
                        "type": "dep",
                        "name": "u"
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "const",
                "value": -1
              },
              {
                "type": "op",
                "op": "*",
                "args": [
                  {
                    "type": "param",
                    "name": "b"
                  },
                  {
                    "type": "fn",
                    "name": "ln",
                    "args": [
                      {
                        "type": "op",
                        "op": "+",
                        "args": [
                          {
                            "type": "const",
                            "value": 1
                          },
                          {
                            "type": "op",
                            "op": "*",
                            "args": [
                              {
                                "type": "dep",
                                "name": "u"
                              },
                              {
                                "type": "dep",
                                "name": "u"
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "u",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "const",
            "value": 0.1
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "const",
                "value": 0.01
              },
              {
                "type": "fn",
                "name": "rand",
                "args": [
                  {
                    "type": "var",
                    "name": "x"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "neumann",
      "dep": "u",
      "spec": "boundary",
      "wrt": "x",
      "location": {
        "x": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "zero-flux: u_x = 0 at x=0 boundary"
    },
    {
      "type": "neumann",
      "dep": "u",
      "spec": "boundary",
      "wrt": "x",
      "location": {
        "x": 1.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "zero-flux: u_x = 0 at x=1 boundary"
    }
  ]
}