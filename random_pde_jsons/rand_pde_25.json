{
  "metadata": {
    "name": "rand_pde_25",
    "description": "1D scalar PDE: u_t = a*sqrt(|u_x|) + b*u_xx + c*u^4 with Neumann BCs at x=0 and x=1, and initial condition u(x,0) = 0.5*exp(-80*(x-0.5)^2)."
  },
  "variables": {
    "independent": [
      "x",
      "t"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "a": 0.1,
    "b": 0.01,
    "c": 0.05
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "u_evolution",
      "type": "equals",
      "lhs": {
        "type": "deriv",
        "dep": "u",
        "wrt": "t",
        "order": 1
      },
      "rhs": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "a"
              },
              {
                "type": "fn",
                "name": "sqrt",
                "args": [
                  {
                    "type": "fn",
                    "name": "abs",
                    "args": [
                      {
                        "type": "deriv",
                        "dep": "u",
                        "wrt": "x",
                        "order": 1
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "b"
              },
              {
                "type": "deriv",
                "dep": "u",
                "wrt": "x",
                "order": 2
              }
            ]
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "c"
              },
              {
                "type": "fn",
                "name": "pow",
                "args": [
                  {
                    "type": "dep",
                    "name": "u"
                  },
                  {
                    "type": "const",
                    "value": 4
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "u",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "fn",
        "name": "u0",
        "args": [
          {
            "type": "var",
            "name": "x"
          }
        ]
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "neumann",
      "dep": "u",
      "spec": {
        "x": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "zero-flux: u_x = 0 at x = 0"
    },
    {
      "type": "neumann",
      "dep": "u",
      "spec": {
        "x": 1.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "zero-flux: u_x = 0 at x = 1"
    }
  ]
}