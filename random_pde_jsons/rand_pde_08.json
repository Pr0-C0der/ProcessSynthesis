{
  "metadata": {
    "name": "rand_pde_08",
    "description": "Single PDE: u_t = s*(u_x/u + u_xx) - t*tanh(u) on x in [0,1], t in [0,1], with IC and BCs."
  },
  "variables": {
    "independent": [
      "x",
      "t"
    ],
    "dependent": [
      "u"
    ]
  },
  "parameters": {
    "s": 0.02,
    "t": 0.4
  },
  "domain": {
    "x": [
      0.0,
      1.0
    ],
    "t": [
      0.0,
      1.0
    ]
  },
  "pdes": [
    {
      "equation_id": "u_evolution",
      "type": "equals",
      "lhs": {
        "type": "deriv",
        "dep": "u",
        "wrt": "t",
        "order": 1
      },
      "rhs": {
        "type": "op",
        "op": "-",
        "args": [
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "s"
              },
              {
                "type": "op",
                "op": "+",
                "args": [
                  {
                    "type": "op",
                    "op": "/",
                    "args": [
                      {
                        "type": "deriv",
                        "dep": "u",
                        "wrt": "x",
                        "order": 1
                      },
                      {
                        "type": "dep",
                        "name": "u"
                      }
                    ]
                  },
                  {
                    "type": "deriv",
                    "dep": "u",
                    "wrt": "x",
                    "order": 2
                  }
                ]
              }
            ]
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "param",
                "name": "t"
              },
              {
                "type": "fn",
                "name": "tanh",
                "args": [
                  {
                    "type": "dep",
                    "name": "u"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "initial_conditions": [
    {
      "type": "ic",
      "dep": "u",
      "location": {
        "t": 0.0
      },
      "value_expr": {
        "type": "op",
        "op": "+",
        "args": [
          {
            "type": "const",
            "value": 1.0
          },
          {
            "type": "op",
            "op": "*",
            "args": [
              {
                "type": "const",
                "value": 0.2
              },
              {
                "type": "fn",
                "name": "sin",
                "args": [
                  {
                    "type": "op",
                    "op": "*",
                    "args": [
                      {
                        "type": "const",
                        "value": 3.141592653589793
                      },
                      {
                        "type": "var",
                        "name": "x"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ],
  "boundary_conditions": [
    {
      "type": "neumann",
      "dep": "u",
      "spec": {
        "x": 0.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "zero spatial derivative at x=0"
    },
    {
      "type": "neumann",
      "dep": "u",
      "spec": {
        "x": 1.0
      },
      "value_expr": {
        "type": "const",
        "value": 0.0
      },
      "notes": "zero spatial derivative at x=1"
    }
  ]
}